# -*- mode: python; -*-
# This Python script, SConscript, invoked by the SConscript in the upper directory,
#
# 1. builds libhealthseekingbehaviour.dll

Import('env')

stdobj = env.Object("stdafx.cpp")

libhealthseekingbehaviourdllSrcFiles = [
                                         "../interventions/HealthseekingbehaviourEModule.cpp"
                                         ]

libhealthseekingbehaviourdllIncFiles = [  "../interventions/Healthseekingbehaviour.h" ]
libhealthseekingbehaviourdllLocalInc = [  "stdafx.h" ]

healthseekingbehaviourenv = env.Clone()

hsbobj = healthseekingbehaviourenv.Object("hsbobj_healthseek","../interventions/HealthSeekingBehaviour.cpp")

healthseekingbehaviourenv.Append(LIBS=['libgeneric_static'])
healthseekingbehaviourenv.Append(LIBPATH=['$BUILD_DIR/libgeneric_static'])
healthseekingbehaviourenv.Append(LIBS=['libvector_static'])
healthseekingbehaviourenv.Append(LIBS=['libmalaria_static'])
healthseekingbehaviourenv.Append(LIBPATH=['$BUILD_DIR/libgeneric'])

libhealthseekingbehaviourDll = healthseekingbehaviourenv.SharedLibrary('libhealthseekingbehaviour', libhealthseekingbehaviourdllSrcFiles + stdobj + hsbobj)
#print "building libhealthseekingbehaviourdll: " + str(libhealthseekingbehaviourdll)

# take libhealthseekingbehaviour.dll (exclude .lib, .exp) out to be the building target
# to match the number of building variant
libhealthseekingbehaviourdllTarget = libhealthseekingbehaviourDll[0]

msvc = GetOption( "MSVC" )
if msvc is not None and msvc != False and msvc != "":

    bvar = healthseekingbehaviourenv['BUILD_VARIANT'] + '|x64'
    print str(libhealthseekingbehaviourdllTarget) + ": Generating MSVS" + healthseekingbehaviourenv['MSVS_VERSION'] + " project files for '%s'" % bvar
    
    healthseekingbehaviourenv.MSVSProject(target = 'LibhealthseekingbehaviourdllScons' + healthseekingbehaviourenv['MSVSPROJECTSUFFIX'],
                    srcs = libhealthseekingbehaviourdllSrcFiles,
		    incs = libhealthseekingbehaviourdllIncFiles,
		    localincs = libhealthseekingbehaviourdllLocalInc,
 		    buildtarget = libhealthseekingbehaviourdllTarget,
                    auto_build_solution = 0,
                    variant = bvar)
