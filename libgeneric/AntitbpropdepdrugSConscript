# -*- mode: python; -*-
# This Python script, SConscript, invoked by the SConscript in the upper directory,
#
# 1. builds libantitbPropertyDependentdrug.dll 

Import('env')

stdobj = env.Object("stdafx.cpp")
atdobj = env.Object("../interventions/AntiTbDrug.cpp")
libantitbPropertyDependentdrugdllSrcFiles = [
                                              "../interventions/AntiTbPropertyDependentDrug.cpp",
                                              "../interventions/AntiTbPropertyDependentDrugEModule.cpp"
                                            ]

libantitbPropertyDependentdrugdllIncFiles = [  "../interventions/Drugs.h" ]
libantitbPropertyDependentdrugdllLocalInc = [  "stdafx.h" ]

antitbPropertyDependentdrugenv = env.Clone()
antitbPropertyDependentdrugenv.Append( CPPDEFINES=["ENABLE_TB" ] )
antitbPropertyDependentdrugenv.Append(LIBS=['libgeneric_static'])
antitbPropertyDependentdrugenv.Append(LIBPATH=['$BUILD_DIR/libgeneric_static'])
#antitbPropertyDependentdrugenv.Append(LIBS=['libtb_static'])
antitbPropertyDependentdrugenv.Append(LIBPATH=['$BUILD_DIR/libgeneric'])

libantitbPropertyDependentdrugDll = antitbPropertyDependentdrugenv.SharedLibrary('libantitbPropertyDependentdrug', libantitbPropertyDependentdrugdllSrcFiles + stdobj + atdobj )
#print "building libantitbPropertyDependentdrugdll: " + str(libantitbPropertyDependentdrugdll)

# take libantitbPropertyDependentdrug.dll (exclude .lib, .exp) out to be the building target
# to match the number of building variant
libantitbPropertyDependentdrugdllTarget = libantitbPropertyDependentdrugDll[0]

msvc = GetOption( "MSVC" )
if msvc is not None and msvc != False and msvc != "":

    bvar = antitbPropertyDependentdrugenv['BUILD_VARIANT'] + '|x64'
    print str(libantitbPropertyDependentdrugdllTarget) + ": Generating MSVS" + antitbPropertyDependentdrugenv['MSVS_VERSION'] + " project files for '%s'" % bvar
    
    antitbPropertyDependentdrugenv.MSVSProject(target = 'LibantitbPropertyDependentdrugdllScons' + antitbPropertyDependentdrugenv['MSVSPROJECTSUFFIX'],
                    srcs = libantitbPropertyDependentdrugdllSrcFiles,
		    incs = libantitbPropertyDependentdrugdllIncFiles,
		    localincs = libantitbPropertyDependentdrugdllLocalInc,
 		    buildtarget = libantitbPropertyDependentdrugdllTarget,
                    auto_build_solution = 0,
                    variant = bvar)
