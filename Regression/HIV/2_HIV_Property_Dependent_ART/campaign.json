{
    "Campaign_Name": "HIV-Style Cascade of Care Demo",
    "Use_Defaults": 1,
    "Events": [

        {
            "Description": "Initial HIV outbreak",
            "class": "CampaignEvent",
            "Start_Day": 3,
            "Nodeset_Config": { "class": "NodeSetAll" },
            "Event_Coordinator_Config": {
                "class": "StandardInterventionDistributionEventCoordinator",
                "Demographic_Coverage": 0.05,
                "Target_Demographic": "ExplicitAgeRanges",
                "Target_Age_Min": 15,
                "Target_Age_Max": 30,
                "Travel_Linked": 0,
                "Intervention_Config": {
                    "class": "OutbreakIndividual",
                    "Outbreak_Source": "PrevalenceIncrease"
                }
            }
        },

        {
            "Description": "New infections get immediate ART (good adherence --> ARTBasic)",
            "class": "CampaignEvent",
            "Start_Day": 1,
            "Nodeset_Config": { "class": "NodeSetAll" },
            "Event_Coordinator_Config": {
                "class": "StandardInterventionDistributionEventCoordinator",
                "Property_Restrictions": [ "ARTAdherence:Good" ],
                "Intervention_Config": {
                    "class": "NodeLevelHealthTriggeredIV",
                    "Trigger_Condition": "NewInfectionEvent",
                    "Demographic_Coverage": 1.0,
                    "Actual_IndividualIntervention_Config":
                    {
                        "class": "ARTBasic",
                        "Viral_Suppression": 1
                    }
                }
            }
        },
        {
            "Description": "New infections get immediate ART (poor adherence --> ARTPlacebo)",
            "class": "CampaignEvent",
            "Start_Day": 1,
            "Nodeset_Config": { "class": "NodeSetAll" },
            "Event_Coordinator_Config": {
                "class": "StandardInterventionDistributionEventCoordinator",
                "Property_Restrictions": [ "ARTAdherence:Poor" ],
                "Intervention_Config": {
                    "class": "NodeLevelHealthTriggeredIV",
                    "Trigger_Condition": "NewInfectionEvent",
                    "Demographic_Coverage": 1.0,
                    "Actual_IndividualIntervention_Config":
                    {
                        "class": "ARTBasic",
                        "Viral_Suppression": 0
                    }
                }
            }
        }
    ]
}
